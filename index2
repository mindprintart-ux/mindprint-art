  <script>
    // year
    document.getElementById('year').textContent = new Date().getFullYear();

    // mobile menu
    const btn = document.querySelector('.menu-btn');
    const menu = document.getElementById('mobile-menu');
    btn?.addEventListener('click', () => {
      const open = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', String(!open));
      if(open){ menu.setAttribute('hidden', ''); menu.style.display='none'; }
      else{ menu.removeAttribute('hidden'); menu.style.display='block'; }
    });

    // Respect reduced motion: soften glitch scan speed
    const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    if(prefersReduced){
      const g = document.querySelector('.glitch');
      if(g) g.style.opacity = '.06';
    }
  </script>
